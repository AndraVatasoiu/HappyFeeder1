<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_white_rounded"
    android:padding="16dp"
    android:elevation="6dp"
    android:layout_marginBottom="16dp"
    android:layout_marginTop="8dp">
    <!-- Buton de ștergere -->
<ImageView
android:id="@+id/button_remove_meal"
android:layout_width="40dp"
android:layout_height="40dp"
android:layout_marginTop="12dp"
android:layout_gravity="end"
android:src="@drawable/remove"
android:contentDescription="Șterge această masă"
android:background="?selectableItemBackgroundBorderless"
android:padding="8dp" />

<EditText
android:id="@+id/edit_meal_name"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:hint="Numele mesei"
android:inputType="text" />

<EditText
android:id="@+id/edit_meal_quantity"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:hint="Cantitate (g/ml)"
android:inputType="numberDecimal"
android:layout_marginTop="12dp" />

<EditText
android:id="@+id/edit_meal_time"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:hint="Ora mesei"
android:focusable="false"
android:clickable="true"
android:layout_marginTop="12dp" />

    </LinearLayout>
