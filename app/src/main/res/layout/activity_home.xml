<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">

        <!-- CARD MOV SUS -->
        <RelativeLayout
            android:id="@+id/topCard"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/bg_top_rounded"
            android:padding="20dp">

            <!-- Poza profil și meniu în stânga sus -->
            <LinearLayout
                android:id="@+id/profileMenuContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_alignParentStart="true"
                android:layout_marginTop="32dp">

                <ImageView
                    android:id="@+id/petImage"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_person"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_bg"
                    android:contentDescription="Poza animalului" />

                <ImageButton
                    android:id="@+id/menuButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="12dp"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:src="@drawable/menu"
                    android:contentDescription="Meniu" />
            </LinearLayout>

            <!-- Buton +Pet sus dreapta (schimbat din TextView în Button) -->
            <Button
                android:id="@+id/addPetButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="32dp"
                android:background="@drawable/circle_bg"
                android:text="+/Edit\nAnimal"
                android:textColor="@color/lavender"
                android:textSize="14sp"
                android:textStyle="bold"
                android:lineSpacingExtra="2dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:elevation="8dp" />

            <!-- Logo centru -->
            <ImageView
                android:id="@+id/appLogo"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:src="@drawable/logo"
                android:contentDescription="Logo aplicație" />

            <!-- Text Bună -->
            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/appLogo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="Bună,"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Text Nume utilizator -->
            <TextView
                android:id="@+id/usernameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/welcomeText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </RelativeLayout>

        <!-- CARD ALB SUPRAPUS -->
        <LinearLayout
            android:id="@+id/feedCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="-40dp"
            android:layout_below="@id/topCard"
            android:orientation="vertical"
            android:elevation="8dp"
            android:padding="16dp"
            android:background="@drawable/bg_white_rounded"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/petNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333" />

                <TextView
                    android:id="@+id/petNameText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="va avea următoarea masă în:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_clock"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/mealTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Nicio masa programata "
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#ED3A55" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nivelul de hrană din dispozitiv este:"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333" />

            <ProgressBar
                android:id="@+id/foodProgressBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="50"
                android:max="100"
                android:progressDrawable="@drawable/progress_bar_custom"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- CARDURI FUNCȚIONALE -->
        <LinearLayout
            android:id="@+id/cardsContainer"
            android:layout_below="@id/feedCard"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp">

            <!-- Carduri cameră și mesaj -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/cardCamera"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_rounded_red"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:elevation="4dp"
                    android:gravity="center_horizontal"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_camera"
                        app:tint="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Vezi ce face animaluțul"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cardMesaj"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_rounded_white"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:elevation="4dp"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_sound"
                        app:tint="#ED3A55" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Trimite un mesaj animalutului tau"
                        android:textColor="#333"
                        android:textSize="14sp"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>

            <!-- Mese programate -->
            <LinearLayout
                android:id="@+id/cardMese"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_gray"
                android:padding="16dp"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/food"
                    app:tint="#ED3A55" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mese programate / Adaugă masă"
                    android:textColor="#333"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:overScrollMode="never"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/mealTimesContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />
                </HorizontalScrollView>
            </LinearLayout>


            <!-- Greutatea animalului -->
            <!-- Card Greutate -->
            <LinearLayout
                android:id="@+id/cardGreutate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_gray"
                android:padding="16dp"
                android:orientation="vertical"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/weight"
                    app:tint="#ED3A55" />

                <TextView
                    android:id="@+id/petWeightText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Greutatea animalului"
                    android:textColor="#333"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Logout button -->
            <Button
                android:id="@+id/logoutButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delogare"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="#ED3A55"
                android:layout_marginTop="24dp" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>
