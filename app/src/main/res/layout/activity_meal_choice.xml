<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Titlu -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cum dorești să programezi mesele?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Card Programare automată -->
        <LinearLayout
            android:id="@+id/cardAuto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_rounded_gray"
            android:padding="16dp"
            android:elevation="4dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="16dp"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Programare automată"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculează mesele în funcție de greutatea animalului."
                android:textSize="14sp"
                android:textColor="#555"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Card Programare manuală -->
        <LinearLayout
            android:id="@+id/cardManual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_rounded_white"
            android:padding="16dp"
            android:elevation="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Programare manuală"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adaugă orele și cantitățile dorite manual."
                android:textSize="14sp"
                android:textColor="#555"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Buton Înapoi -->
        <Button
            android:id="@+id/button_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Înapoi"
            android:textAllCaps="false"
            android:textColor="#333"
            android:background="@drawable/bg_rounded_red"
            android:layout_marginTop="32dp" />
    </LinearLayout>
</ScrollView>
